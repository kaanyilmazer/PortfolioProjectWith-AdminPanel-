@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Duyurular</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {  
                            if(item.Status=="Linkedin Hesap Paylaşımı")
                            {
                                color = "badge badge-danger";
                            }
                               if(item.Status=="Bootcamp Duyurusu")
                            {
                                color = "badge badge-warning";
                            }
                               if(item.Status=="Yeni Proje")
                            {
                                color = "badge badge-success";
                            }
                               if(item.Status=="Sağlık Hakkında")
                            {
                                color = "badge badge-info";
                            }
                            <tr>
                                <th>@item.ID</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/User/Default/AnnouncementDetails/@item.ID" class="btn btn-primary btn-sm btn-icon-text"> 
                          <i class="ti-file btn-icon-prepend"></i>
                         Detaylar
                        </a> 
                        </td> 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
