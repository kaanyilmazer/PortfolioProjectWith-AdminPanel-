@using EntityLayer.Concrete
@model List<MessageUser>

@{
    ViewData["Title"] = "ReceiverMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Gelen Kutusu</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                            <tr>
                                <th>@item.MessageUserID</th>
                                <td>@item.Subject</td>
                                <td>@item.SenderName</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <a href="/User/Message/MessageDetails/@item.MessageUserID" class="btn btn-primary btn-sm btn-icon-text">
                                        <i class="ti-file btn-icon-prepend"></i>
                                        Detayları Gör
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>