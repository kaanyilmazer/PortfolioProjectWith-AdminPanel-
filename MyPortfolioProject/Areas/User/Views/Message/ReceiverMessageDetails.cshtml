@model EntityLayer.Concrete.MessageUser

@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Mesaj Detayları</h1>

<form class="form-group">
    <br />
    @Html.Label("ID")
    @Html.HiddenFor(x=>x.MessageUserID,new {@class ="form-control"})
    <br />
    @Html.Label("Alıcı Adı")
    @Html.TextBoxFor(x=>x.ReceiverName ,new {@class ="form-control"})
    <br />
    @Html.Label("Alıcının Maili")
    @Html.TextBoxFor(x=>x.Receiver ,new {@class ="form-control"})
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=>x.MessageContent,10,3, new {@class ="form-control"})
</form>
