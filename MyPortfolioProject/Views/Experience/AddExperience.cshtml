@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using(Html.BeginForm("AddExperience","Experience",FormMethod.Post))
{
   <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <p class="card-description"> Yeni Deneyim Ekleme Paneli </p>
                    <form class="forms-sample">
                      <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.ExperienceName,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Görsel Url</label>
                        @Html.TextBoxFor(x=>x.ImageUrl,new{@class="form-control"})
                      </div>

                      <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x=>x.Description,6,4,new{@class="form-control"})
                      </div>
                      <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
                      @Html.ActionLink("İptal", "Index", "Experience", null, new { @class = "btn btn-danger" })
                    </form>
                  </div>
                </div>
              </div>
}



