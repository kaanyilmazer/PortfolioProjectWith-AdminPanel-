@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post))
{
      <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <p class="card-description"> Referans Detay Sayfası </p>
                    <form class="forms-sample">
                        <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.TestimonialID,new {@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.ClientName,new {@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x=>x.Company,new {@class="form-control"})
                      </div>
                    <div class="form-group">
                        <label>Resim</label>
                        @Html.TextBoxFor(x=>x.ImageUrl,new {@class="form-control"})
                    </div>
                      <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextAreaFor(x=>x.Comment,8,3,new {@class="form-control"})
                      </div>
                      <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
                      @Html.ActionLink("İptal", "Index", "Testimonial", null, new { @class = "btn btn-danger" })
                    </form>
                  </div>
                </div>
              </div>
}



