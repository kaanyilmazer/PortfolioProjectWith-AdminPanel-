@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
              <h3 class="mb-0">Servis Güncelleme Sayfası</h3>
            </div>
@using(Html.BeginForm("UpdateService","Service",FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ServiceID)
      <br />
    @Html.Label("Hizmet Başlığı")
    @Html.TextBoxFor(x => x.Title , new { @class = "form-control"})
    <br />
    <label>Değer</label>
    @Html.TextBoxFor(x=>x.ImageUrl,new{@class ="form-control"})
    <br />
    <button class="btn btn-outline-success">Kaydet</button> 
}


